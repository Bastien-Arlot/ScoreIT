.jumbotron {

    background: url(<%= asset_path 'business.png' %>);
    min-height: 75vh;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
}


#jumbotext1 {
    color: var(--prim);
    font-weight: 500;
}


#jumbotext3 {
    font-weight: bold;
}


.jumbutton {

    margin-top: 15px;
    background-color: #66ced6!important;
    color: #fff!important;
    font-weight: 300;
}

.jumbutton:hover {
    color: #66ced6!important;
    background-color: #fff!important;
    border-color: var(--second);
}
