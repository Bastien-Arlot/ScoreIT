      <%= label_tag :answer_team_6, "0" %>
      <%= radio_button_tag :answer_team_6, 1, true%><br>
    <%else%>
      <%= label_tag :answer_team_6, "0" %>
      <%= radio_button_tag :answer_team_6, 1%><br>
