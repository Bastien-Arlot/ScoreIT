<div id="block" class="container signin-container">
  <div class="text-center mt-5">
    <h1>Mot de passe oublié ? <i class="fa fa-lock"></i></h1>
    <p>Vous pouvez réinitialiser votre mot de passe ici.</p>
  </div>
  <div id="box-pwd" class="box signin-box">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group signin-form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"email-input", class:"form-control" %>
      </div>
      <div id="act" class="actions">
        <%= f.submit "Réinitialiser le mot passe", class:"btn btn-secondary rounded-pill m-3 mt-3", id:"reset-pwd-btn" %>
      </div>
    <% end %>
  </div>
  <%= link_to "S'inscrire", new_registration_path(resource_name), class:"btn-login" %>
</div>
