
<div class="container edit-container">
        <div class="edit-title">
            <h1 class="title-edit">Modifiez votre profil <%= resource_name.to_s.humanize %></h1>
        </div>
        <div class="box edit-box">
            <span></span>


          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group edit-form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-edit-control", id:"InputEmail"  %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group edit-form-group">
              <%= f.label :password %> <small class="text-secondary"> <br>
              Ne mettez rien ici si vous ne souhaitez rien modifier</small><br />
              <%= f.password_field :password, autocomplete: "new-password",class:"form-edit-control", id:"InputPassword" %>
              <% if @minimum_password_length %>
                <br />
                <small class="text-secondary">(minimum <%= @minimum_password_length %> caractÃ¨res)</small>
              <% end %>
            </div>

            <div class="form-group edit-form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-edit-control", id:"InputPassword" %>
            </div>

            <div class="form-group edit-form-group">
              <%= f.label :current_password %> <small class="text-secondary"> <br> (Nous avons besoin de votre mot de passe actuel pour valider la modification)</small><br />
              <%= f.password_field :current_password, autocomplete: "current-password",class:"form-edit-control", id:"InputPassword" %>
            </div>
            </div>
            <div class="submit edit-submit">
              <%= f.submit "C'est tout bon!", id:"jumbutton", class:"btn btn-lg rounded-pill"%>
            </div>
          <% end %>
        
        <a href="<%=root_path%>" class="btn btn-home">
        <button type="submit" class="btn btn-home"><script src="https://cdn.lordicon.com/lusqsztk.js"></script>
            <lord-icon
                src="https://cdn.lordicon.com/hwixfird.json"
                trigger="loop-on-hover"
                colors="primary:#85C8FF"
                state="hover-1"
                style="width:60px;height:60px">
            </lord-icon></button>
        </a>
        <div class="box-delete">
        <h3>Tu veux supprimer ton compte ? ðŸ¥²</h3>

        <p><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Pas de regret ? ðŸ˜­" }, method: :delete, id:"jumbutton-delete", class:"btn btn-lg rounded-pill" %></p>

        <%# <%= link_to "Back", :back %> 
        </div>
        
</div>


