
<div class="container edit-container">
  <div class="edit-title">
    <h1 class="title-edit">Modifiez votre profil <%= resource_name.to_s.humanize %></h1>
  </div>
  <div class="box edit-box">
    <span></span>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group edit-form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-edit-control", id:"InputEmail"  %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="form-group edit-form-group">
      <%= f.label :current_password %> <small class="text-secondary"> <br> (Nous avons besoin de votre mot de passe actuel)</small><br />
      <%= f.password_field :current_password, autocomplete: "current-password",class:"form-edit-control", id:"InputPassword" %>
    </div>
    <div class="form-group edit-form-group">
      <%= f.label :nouveau_mot_de_passe %> <small class="text-secondary"> <br>
        Ne mettez rien ici si vous ne souhaitez rien modifier</small>
        <% if @minimum_password_length %>
        <small class="text-secondary">(minimum <%= @minimum_password_length %> caractÃ¨res)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",class:"form-edit-control", id:"InputPassword" %>

      </div>

      <div class="form-group edit-form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-edit-control", id:"InputPassword" %>
      </div>


    </div>
    <div class="container">
      <div class="d-flex justify-content-center">
        <div class="submit edit-submit ">
          <%= f.submit "C'est tout bon!", id:"btn-go", class:"btn btn-lg rounded-pill"%>
            <% end %>
          <%= link_to 'Page profil', user_path(current_user.username), class:"btn btn-lg rounded-pill mt-3", id:"back-profile-btn"%>
          <%= link_to root_path, class:"btn btn-home" do %>
                  <%= image_tag "home.gif", :size => "60x60"%>
            <% end %>
        </div>
      </div>


    </div>


  <a href="<%=root_path%>" class="btn btn-home">
      </a>

    <div class="box-delete">
      <h3>Tu veux supprimer ton compte ? ðŸ¥²</h3>

      <p><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Pas de regret ? ðŸ˜­" }, method: :delete, id:"jumbutton-delete", class:"btn btn-lg rounded-pill" %></p>

    </div>

  </div>
