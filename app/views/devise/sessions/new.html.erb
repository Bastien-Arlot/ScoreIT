<div class="container signin-container">
  <div class="signin-title">
    <h1>Connectez-vous</h1>
  </div>
  <div class="box signin-box">
    <span></span>


      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group signin-form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", id:"InputEmail" %>
      </div>

      <div class="form-group signin-form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password",class:"form-control", id:"InputPassword" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="form-check signin-form-check">
        <%= f.check_box :remember_me, class:"form-check-input", id:"exampleCheck1"%>
        <%= f.label :remember_me, label_tag:"Se souvenir de moi", class:"form-check-label" %>
      </div>
      <% end %>
      <div class="links-submit-form">
        <%= render "devise/shared/links" %>
      </div>

      <div class="submit signin-submit">
        <%= f.submit "C'est parti!", id:"letsgo", class:"btn btn-lg rounded-pill"%>
      </div>
  <% end %>
    </div>
    <%= link_to image_tag("home.gif", :size => "60x60"), root_path, class:"btn btn-home" %>
  </div>
