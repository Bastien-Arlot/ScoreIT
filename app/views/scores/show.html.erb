<div class="container text-center">
  <% if @score.name.nil?  %>
    <% if !@score.category_finance.total_100_finance.nil? %>
      <p>Finance : <%= @score.category_finance.total_100_finance%>
        <p>
        <% else %>
          <%= link_to "Finance", new_startup_score_category_finance_answer_finance_path(@startup.id, @startup.scores.last.id, @startup.scores.last.category_finance.id) , class:"btn btn-lg rounded-pill", id:"jumbutton"%>
        <% end%>
        <% if !@score.category_innovation.total_100_innovation.nil? %>
          <p>Innovation : <%= @score.category_innovation.total_100_innovation%>
            <p>
            <% else %>
              <%= link_to "Innovation", new_startup_score_category_innovation_answer_innovation_path(@startup.id, @startup.scores.last.id, @startup.scores.last.category_innovation.id) , class:"btn btn-lg rounded-pill", id:"jumbutton"%>
            <% end%>
            <% if !@score.category_market.total_100_market.nil? %>
              <p>Marché : <%= @score.category_market.total_100_market%>
                <p>
                <% else %>
                  <%= link_to "Marché", new_startup_score_category_market_answer_market_path(@startup.id, @startup.scores.last.id, @startup.scores.last.category_innovation.id) , class:"btn btn-lg rounded-pill", id:"jumbutton"%>
                <% end%>
                <% if !@score.category_strategy.total_100_strategy.nil? %>
                  <p>Stratégie : <%= @score.category_strategy.total_100_strategy%>
                    <p>
                    <% else %>
                      <%= link_to "Stratégie", new_startup_score_category_strategy_answer_strategy_path(@startup.id, @startup.scores.last.id, @startup.scores.last.category_innovation.id) , class:"btn btn-lg rounded-pill", id:"jumbutton"%>
                    <% end%>
                    <% if !@score.category_offer.total_100_offer.nil? %>
                      <p>Offre : <%= @score.category_offer.total_100_offer%>
                        <p>
                        <% else %>
                          <%= link_to "Offre", new_startup_score_category_offer_answer_offer_path(@startup.id, @startup.scores.last.id, @startup.scores.last.category_innovation.id) , class:"btn btn-lg rounded-pill", id:"jumbutton"%>
                        <% end%>
                        <% if !@score.category_team.total_100_team.nil? %>
                          <p>Equipe : <%= @score.category_team.total_100_team%>
                            <p>
                            <% else %>
                              <%= link_to "Equipe", new_startup_score_category_team_answer_team_path(@startup.id, @startup.scores.last.id, @startup.scores.last.category_team.id) , class:"btn btn-lg rounded-pill", id:"jumbutton"%>
                            <% end%>
                          <% elsif current_user.id == @startup.user_id && !@score.name.nil?  %>
                            <h3>Innovation :</h3>
                            <h5><%=  @score.category_innovation.total_100_innovation %>/100</h5>
                            <h3>Finance :</h3>
                            <h5><%=  @score.category_finance.total_100_finance %>/100</h5>
                            <h3>Marché :</h3>
                            <h5><%=  @score.category_market.total_100_market %>/100</h5>
                            <h3>Stratégie :</h3>
                            <h5><%=  @score.category_strategy.total_100_strategy %>/100</h5>
                            <h3>Offre :</h3>
                            <h5><%=  @score.category_offer.total_100_offer %>/100</h5>
                            <h3>Equipe :</h3>
                            <h5><%=  @score.category_team.total_100_team %>/100</h5>
                          <% end %>
                        </div>
