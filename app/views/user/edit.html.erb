<%= form_for @user do |f|%>
  <div class="container contact ">
    <div class="row">
      <div class="col-md-4 text-center">
        <div class="contact-info">
          <%= image_tag "profil.png", :size => "120x120", class:" mt-3 mb-3"  %>
          <h3>Modifiez votre profil</h3>
        </div>
      </div>
      <div class="col-md-8 text-center">
        <div class="contact-form">
          <div class="form-group">
            <br/>
            <label  class="control-label" for="fname">Pseudo:</label>
            <div class=" col-lg-12 col-md-12 col-sm-12">
              <%= f.text_field :username, class:"form-control area"%>
            </div>
            <label class="  mt-5">Change ta photo :</label>
          </div>
          <div class="field col-lg-8 col-md-12 col-sm-12  mt-3">
            <%= f.file_field :avatar, class:" btn btn-change", id:"btn-search" %>
          </div>
          <div class="form-group text-center">
            <%= submit_tag "Modifier",  class:" btn btn-change"  %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="text-end">
    <%= link_to "Revenir au profil", user_path(current_user.username) , class:"btn btn-signup m-5 "%>
  </div>
<% end %>
