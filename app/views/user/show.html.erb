<div  class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-8">
      <div class="card p-3 py-4">
        <div  class="text-center"> <img src="#" width="100" class="rounded-circle"> </div>
        <div  class="text-center mt-1">
          <% if !@user.username.nil? %>
            <h1 id="username-title" class="mt-2 mb-0"><%=@user.username%></h1>
          <% end %>
          <br/>
          <h4 id="title-email">Email :</h4>
          <h5><%= @user.email%></h5>
          <br/>
          <div id="div-s-profile" class="px-4 mt-1">
            <% if  !@user.startup.nil?  && !@user.startup.scores.last.name.nil? %>
              <%= link_to startup_path(current_user.startup.id) do %>
                <%= image_tag "dashboard.png", :size => "40x40"  %>
              <% end %>
            <% end %>
            <% if !@user.startup.nil? %>
              <h4 id="title-s-profile">Ma startup :</h4>
              <h5><%=@user.startup.name%></h5>
              <br/>
              <h6><%=@user.startup.description%></h6>
            <% end %>
          </div>
          <br/>
          <div class="buttons">
            <%= link_to "ParamÃ¨tres", edit_user_registration_path , class:"btn btn-signup px-4 ms-3"%>
            <%= link_to "Editer profil", edit_user_path(@user.id) , class:"btn btn-signup px-4 ms-3"%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="text-end">
    <a href="<%=root_path%>" class="btn btn-home">
      <button type="submit" class="btn btn-home"><script src="https://cdn.lordicon.com/lusqsztk.js"></script>
        <lord-icon
               src="https://cdn.lordicon.com/hwixfird.json"
                trigger="loop-on-hover"
                colors="primary:#85C8FF"
                state="hover-1"
                style="width:60px;height:60px">
        </lord-icon></button>
    </a>
  </div>
</div>
